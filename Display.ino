void setupDisplay()
{
  lcd.begin(16, 2);
  lcd.setCursor(0, 1);
  lcd.write("Display Initialized");

}

void printToDisplay1(String x)
{
 char b[17];
  x.toCharArray(b,17);
  lcd.setCursor(0, 0);
  lcd.print(b);
}

void printToDisplay2(String x)
{
  char b[17];
  x.toCharArray(b,17);
  lcd.setCursor(0, 1);
  lcd.print(b);
}

